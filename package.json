{
  "name": "uncharter-waters-2",
  "version": "1.0.0",
  "description": "Remaking and reworking Uncharted Waters: New Horizons (大航海時代II) using web technologies",
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "lint": "eslint src/**/*.{js,jsx}",
    "test": "jest",
    "setup": "ansible-playbook -i ansible/hosts ansible/setup.yml",
    "build": "rm -rf dist && webpack --profile -p --mode production",
    "deploy": "rsync -a --delete dist/ root@johanli.com:/var/www/unchartedwaters2.com"
  },
  "author": "Johan Li",
  "license": "MIT",
  "babel": {
    "presets": [
      "@babel/preset-react",
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": "defaults"
        }
      ]
    ],
    "compact": false
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react-hooks"
    ],
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:react/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "jest": {
    "preset": "ts-jest",
    "moduleNameMapper": {
      "\\.(png|bin)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "pixi.js": "^5.3.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.3",
    "@babel/polyfill": "^7.10.1",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@types/jest": "^26.0.3",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^4.0.0",
    "css-loader": "^3.6.0",
    "eslint": "^7.3.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "style-loader": "^1.2.1",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "workbox-webpack-plugin": "^5.1.3"
  }
}
